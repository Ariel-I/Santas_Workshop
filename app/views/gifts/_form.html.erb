<%= form_for @gift do |f| %>

  <% if @gift.person_id.nil? %>
    <h4>Who is this gift for?</h4>
    <%= f.collection_select(:person_id, Person.all, :id, :name, prompt: "Choose a person or create a new person below") %>
    <br><br>
    <div>
    <%= f.fields_for :person, Person.new do |p| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
    <% end %>
    </div>
  <% else %>
    <%= f.hidden_field :person_id  %>
  <%end%>
<br><br>

  <%= f.label :gift_name %>
  <%= f.text_field :name %><br><br>
  <%= f.label :gift_cost %>
  <%= f.text_field :cost %><br><br>
  <%= f.label :notes %>
  <%= f.text_field :notes %><br><br>

  <%= f.submit "Create Gift" %>
<% end %>